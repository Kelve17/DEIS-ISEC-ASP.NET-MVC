@model IEnumerable<DEIS_ESTAGIOS.Models.Proposta>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Propostas</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ramo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Localizacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataFim)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ramo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localizacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            <td>
                @Html.ActionLink("Detalhes", "Details", "Propostas", new { id = item.PropostaId }, new { @class = "btn btn-info btn-md" })
                @Html.ActionLink("Mensagem", "Create", "Mensagens", new { id = item.PropostaId }, new { @class = "btn btn-info btn-md" })
            </td>
        </tr>
    }

</table>
