@model IEnumerable<DEIS_ESTAGIOS.Models.Aluno>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Alunos</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ramo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apelido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Morada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telemovel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumeroEstágios)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ramo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apelido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Morada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telemovel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroEstágios)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.NumeroAluno }, new { @class = "btn btn-info btn-md" })
            @Html.ActionLink("Detalhes", "Details", new { id=item.NumeroAluno }, new { @class = "btn btn-info btn-md" })
            @Html.ActionLink("Apagar", "Delete", new { id=item.NumeroAluno }, new { @class = "btn btn-info btn-md" })
        </td>
    </tr>
}

</table>
